defaults: &defaults
  adapter: postgresql
  username: username
  password: password
  port: 5432
  host: localhost
  pool: 20

development:
  <<: *defaults
  database: railtrack_development

test:
  <<: *defaults
  database: railtrack_test

production:
  <<: *defaults
  host: <%= ENV['production_database_host'] %>
  database: <%= ENV['production_database_name'] %>
  username: <%= ENV['production_database_username'] %>
  password: <%= ENV['production_database_password'] %>
